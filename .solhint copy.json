{
  "extends": "solhint:recommended",
  "plugins": [],
  "rules": {
    "compiler-version": ["error", "^0.8.0"],
    "func-visibility": ["warn", { "ignoreConstructors": true }],
    "max-line-length": ["warn", 120],
    "function-max-lines": ["warn", 100],
    "no-empty-blocks": "off",
    "no-inline-assembly": "off",
    "reason-string": "off",
    "gas-custom-errors": "off",
    "gas-increment-by-one": "off",
    "gas-strict-inequalities": "off",
    "gas-calldata-parameters": "off",
    "gas-length-in-loops": "off",
    "gas-named-return-values": "off",
    "gas-struct-packing": "off",
    "gas-indexed-events": "off",
    "gas-small-strings": "off",
    "gas-multitoken1155": "off",
    "import-path-check": "off",
    "custom-errors": "off",
    "avoid-low-level-calls": "off",
    "avoid-tx-origin": "warn",
    "check-send-result": "error",
    "state-visibility": "error",
    "var-name-mixedcase": "warn",
    "const-name-snakecase": "warn",
    "func-name-mixedcase": "warn",
    "modifier-name-mixedcase": "warn",
    "event-name-camelcase": "warn",
    "immutable-vars-naming": "warn"
  }
}
